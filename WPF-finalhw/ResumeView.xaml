<Window x:Class="WPF_finalhw.ResumeView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_finalhw"
        mc:Ignorable="d"
   Title="ResumeView" Height="450" Width="400" MinHeight="400" MinWidth="300" 
        Background="#1E1E2E" WindowStartupLocation="CenterOwner">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Резюме" 
                   FontSize="28" 
                   FontWeight="Bold" 
                   Foreground="#F8F8F2" 
                   HorizontalAlignment="Center" 
                   Grid.Row="0"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <StackPanel >
                    <TextBlock Text="Имя:" 
                               FontWeight="Bold" 
                               Foreground="#8BE9FD"/>
                    <TextBlock Text="{Binding Name}" 
                               Foreground="#F8F8F2"/>

                    <TextBlock Text="Возраст:" 
                               FontWeight="Bold" 
                               Foreground="#8BE9FD"/>
                    <TextBlock Text="{Binding Age}" 
                               Foreground="#F8F8F2"/>

                    <TextBlock Text="Адрес:" 
                               FontWeight="Bold" 
                               Foreground="#8BE9FD"/>
                    <TextBlock Text="{Binding Address}" 
                               Foreground="#F8F8F2"/>

                    <TextBlock Text="Статус:" 
                               FontWeight="Bold" 
                               Foreground="#8BE9FD"/>
                    <TextBlock Text="{Binding Status}" 
                               Foreground="#F8F8F2"/>

                    <TextBlock Text="Email:" 
                               FontWeight="Bold" 
                               Foreground="#8BE9FD"/>
                    <TextBlock Text="{Binding Email}" 
                               Foreground="#F8F8F2"/>
                </StackPanel>
                
                <TextBlock Text="Навыки:" 
                           FontWeight="Bold" 
                           FontSize="16" 
                           Foreground="#BD93F9"/>

                <WrapPanel>
                    <ItemsControl ItemsSource="{Binding Skills}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#44475A" 
                                        Padding="8" 
                                        Margin="5" 
                                        CornerRadius="10">
                                    <TextBlock Text="{Binding}" 
                                               Foreground="#F8F8F2" 
                                               FontSize="14"/>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </WrapPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
