<Window x:Class="WPF_finalhw.View"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_finalhw"
        mc:Ignorable="d"
        Title="Resume database" Height="450" Width="800"  MinWidth="500" MinHeight="400" Background="#F7E3AF">

    <Window.Resources>
        <local:ViewModel x:Key="ViewModel"/>

    </Window.Resources>
    
    
    <Window.DataContext>
        <local:ViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>

            <RowDefinition Height="*" />
            
            <RowDefinition Height="*" />
           
        </Grid.RowDefinitions>

 
        <DockPanel Grid.Row="0" Margin="10">
            <Button Content="Просмотр резюме" Command="{Binding OpenCommand}" Margin="5"/>
            <Button Content="Открыть" Command="{Binding OpenCommand}" Margin="5"/>
            <Button Content="Сохранить" Command="{Binding SaveCommand}" Margin="5"/>
            <Button Content="Добавить" Command="{Binding AddCommand}" Margin="5"/>
        </DockPanel>

      
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="10">
                <TextBlock Text="Имя:" />
                <TextBox Text="{Binding CurrentName}" Width="200" />
                <TextBlock Text="Возраст:" />
                <TextBox Text="{Binding CurrentAge}" Width="200" />
                <TextBlock Text="Адрес:" />
                <TextBox Text="{Binding CurrentAddress}" Width="200"/>
                <TextBlock Text="Семейное положение:"/>
                <TextBox Text="{Binding CurrentStatus}" Width="200" />
                <TextBlock Text="Email:"/>
                <TextBox Text="{Binding CurrentEmail}" Width="200"/>
            </StackPanel>

            <WrapPanel Grid.Column="1" Margin="10">
                <TextBlock Text="Навыки:" />
                <CheckBox Content="English" IsChecked="{Binding CurrentSkills}" Margin="5"/>
                <CheckBox Content="JavaScript" IsChecked="{Binding CurrentSkills}" Margin="5"/>
                <CheckBox Content="HTML+CSS" IsChecked="{Binding CurrentSkills}" Margin="5"/>
                <CheckBox Content="React" IsChecked="{Binding CurrentSkills}" Margin="5"/>
                <CheckBox Content="Angular" IsChecked="{Binding CurrentSkills}" Margin="5"/>
            </WrapPanel>
        </Grid>

        <ScrollViewer Grid.Row="2" Margin="10" VerticalScrollBarVisibility="Auto">
            <ListBox ItemsSource="{Binding RecordsList}" IsSynchronizedWithCurrentItem="True" SelectedIndex="{Binding Index_selected_listbox, Mode=TwoWay}"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="Bisque" BorderThickness="1" Margin="10">
                            <StackPanel Margin="10">
                                <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>

                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel />
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
            </ListBox>
        </ScrollViewer>

    </Grid>
</Window>
